{
  "preset": "jest-expo",
  "verbose": false,
  "testTimeout": 10000,
  "testMatch": ["**/*.test.[jt]s?(x)"],
  "collectCoverageFrom": [
    "**/api/**/**.{js,jsx}",
    "**/components/**/**.{js,jsx}",
    "**/screens/**/**.{js,jsx}",
    "**/App.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 60,
      "functions": 60,
      "lines": 80,
      "statements": 60
    }
  },
  "transform": {
    "^.+\\.jsx?": "babel-jest"
  },
  "setupFilesAfterEnv": ["./jest.setup.js"]
}
